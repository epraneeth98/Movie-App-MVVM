<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/movie_details_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <TextView
                android:id="@+id/movie_details_original_title"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Movie Na8flskjdfhlme"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/movie_details_vote_average"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/movie_details_original_title"
                android:padding="10dp"
                android:text="3.5"
                android:textColor="@color/green"
                android:textSize="30dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/movie_details_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="This paragraph contains details of the film"
            android:textColor="@color/black"
            android:textSize="25dp" />
    </LinearLayout>
</ScrollView>